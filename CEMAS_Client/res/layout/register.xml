<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/appbac"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="账号:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.34" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="密码:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uPassword"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.98" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="姓名："
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uAge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="年龄:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uAge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uGender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="性别:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uGender"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uSchoolNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="学号:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uSchoolNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.82" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="邮箱:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uEmail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uIdentify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="身份证号:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uIdentify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView_uTele"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="电话:"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/editText_uTele"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.77" />
    </LinearLayout>
    
    
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="注册" />

        <Button
            android:id="@+id/btn_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:text="返回" />
    </LinearLayout>

</LinearLayout>